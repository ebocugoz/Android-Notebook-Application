<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
    android:background="#FFF9F9F9"
                android:paddingRight="10dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
    >
<ImageView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/notephoto"
    android:src="@drawable/block_orange"
    android:layout_alignParentTop="true"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true"
    android:layout_marginLeft="12dp"
    android:layout_marginStart="12dp"
    android:layout_marginRight="12dp"
    android:layout_marginEnd="15dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Note Title"
        android:id="@+id/title"
        android:textAllCaps="true"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@id/notephoto"
        android:layout_toEndOf="@+id/notephoto"
        android:ellipsize="end"
        android:singleLine="true"
        android:layout_marginBottom="2dp"



        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Note body oo lololololol hat yougonna do when they come for you"
        android:id="@+id/body"
        android:layout_below="@id/title"
        android:layout_alignParentRight="@id/notephoto"
        android:layout_alignParentEnd="true"
        android:layout_toRightOf="@id/notephoto"
        android:layout_toEndOf="@+id/notephoto"
        android:ellipsize="end"
        android:singleLine="true"



        />



</RelativeLayout>
